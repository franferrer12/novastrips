<style>
  .announcement-bar-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    text-align: center;
    font-size: 14px;
    font-weight: 500;
  }

  .announcement-bar-{{ section.id }} a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
  }

  .announcement-bar-{{ section.id }} a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .announcement-bar-{{ section.id }} .announcement__message {
    margin: 0;
    padding: 10px 0;
  }

  .announcement-bar-{{ section.id }} strong {
    font-weight: 700;
  }
</style>

<div class="announcement-bar-{{ section.id }}" data-section-id="{{ section.id }}">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <div class="announcement__message" {{ block.shopify_attributes }}>
        {{ block.settings.text }}
      </div>
    {% endfor %}
  {% else %}
    <div class="announcement__message">
      <p><strong>Welcome to our store!</strong></p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Announcement Bar HiStrips",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 10
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link Hover Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Announcement",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p><strong>BLACK FRIDAY: 30% OFF + WIN 20,000$</strong></p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar HiStrips",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text": "<p><strong>BLACK FRIDAY: 30% OFF + WIN 20,000$</strong></p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
