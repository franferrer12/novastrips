<style>
  .footer-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .footer-{{ section.id }} a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-{{ section.id }} a:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .footer-{{ section.id }} .footer__grid {
    display: grid;
    gap: 40px;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 768px) {
    .footer-{{ section.id }} .footer__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 60px;
    }
  }

  .footer-{{ section.id }} .footer__column__title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-{{ section.id }} .footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-{{ section.id }} .footer__menu li {
    margin-bottom: 12px;
  }

  .footer-{{ section.id }} .footer__menu a {
    font-size: 14px;
    opacity: 0.75;
  }

  .footer-{{ section.id }} .footer__menu a:hover {
    opacity: 1;
  }

  .footer-{{ section.id }} .footer__bottom {
    margin-top: 60px;
    padding-top: 30px;
    border-top: 1px solid {{ section.settings.border_color }};
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    font-size: 14px;
    opacity: 0.75;
  }

  .footer-{{ section.id }} .footer__social {
    display: flex;
    gap: 20px;
  }

  .footer-{{ section.id }} .footer__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
  }

  .footer-{{ section.id }} .footer__social svg {
    width: 20px;
    height: 20px;
  }

  .footer-{{ section.id }} .footer__newsletter__title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .footer-{{ section.id }} .footer__newsletter__form {
    display: flex;
    gap: 10px;
    margin-top: 16px;
  }

  .footer-{{ section.id }} .footer__newsletter__input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ section.settings.border_color }};
    background: transparent;
    color: {{ section.settings.text_color }};
    border-radius: 4px;
  }

  .footer-{{ section.id }} .footer__newsletter__button {
    padding: 12px 24px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .footer-{{ section.id }} .footer__newsletter__button:hover {
    opacity: 0.8;
  }
</style>

<footer class="footer-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="wrapper">
    <div class="footer__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h3 class="footer__column__title">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.menu != blank %}
                <ul class="footer__menu">
                  {% for link in block.settings.menu.links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>

          {% when 'text' %}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h3 class="footer__column__title">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="footer__text">
                  {{ block.settings.text }}
                </div>
              {% endif %}
            </div>

          {% when 'newsletter' %}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h3 class="footer__newsletter__title">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="footer__newsletter__text">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% form 'customer', class: 'footer__newsletter__form' %}
                {% if form.posted_successfully? %}
                  <p class="success-message">{{ 'newsletter.success' | t }}</p>
                {% else %}
                  <input
                    type="email"
                    name="contact[email]"
                    class="footer__newsletter__input"
                    placeholder="{{ block.settings.placeholder }}"
                    required
                  >
                  <button type="submit" class="footer__newsletter__button">
                    {{ block.settings.button_label }}
                  </button>
                {% endif %}
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        {{ section.settings.copyright_text }}
      </div>

      {% if section.settings.show_social %}
        <div class="footer__social">
          {% if section.settings.social_facebook != blank %}
            <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.social_instagram != blank %}
            <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.social_twitter != blank %}
            <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.954 4.569c-.885.389-1.83.654-2.825.775 1.014-.611 1.794-1.574 2.163-2.723-.951.555-2.005.959-3.127 1.184-.896-.959-2.173-1.559-3.591-1.559-2.717 0-4.92 2.203-4.92 4.917 0 .39.045.765.127 1.124C7.691 8.094 4.066 6.13 1.64 3.161c-.427.722-.666 1.561-.666 2.475 0 1.71.87 3.213 2.188 4.096-.807-.026-1.566-.248-2.228-.616v.061c0 2.385 1.693 4.374 3.946 4.827-.413.111-.849.171-1.296.171-.314 0-.615-.03-.916-.086.631 1.953 2.445 3.377 4.604 3.417-1.68 1.319-3.809 2.105-6.102 2.105-.39 0-.779-.023-1.17-.067 2.189 1.394 4.768 2.209 7.557 2.209 9.054 0 13.999-7.496 13.999-13.986 0-.209 0-.42-.015-.63.961-.689 1.8-1.56 2.46-2.548l-.047-.02z"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.social_youtube != blank %}
            <a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

