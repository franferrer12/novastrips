<style>
  .header__wrapper {
    position: relative;
    z-index: 100;
  }

  .theme__header {
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    padding: 15px 0;
  }

  .section-padding {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Mobile Header */
  .header__mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header__mobile__left,
  .header__mobile__right {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .header__mobile__hamburger {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
  }

  .header__mobile__hamburger svg {
    width: 24px;
    height: 24px;
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
  }

  .header__logo__link {
    display: block;
    max-width: {{ section.settings.logo_width_mobile }}px;
  }

  .header__logo__text {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    text-decoration: none;
  }

  .header__logo img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Cart Button */
  .header__cart__button {
    position: relative;
    text-decoration: none;
    color: #000;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .header__cart__button svg {
    width: 24px;
    height: 24px;
  }

  .header__cart__count {
    font-size: 14px;
    font-weight: 500;
  }

  /* Desktop Header */
  .header__desktop {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .header__mobile {
      display: none;
    }

    .header__desktop {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 40px;
    }

    .header__desktop__bar__l,
    .header__desktop__bar__c,
    .header__desktop__bar__r {
      display: flex;
      align-items: center;
    }

    .header__desktop__bar__l {
      flex: 0 0 auto;
    }

    .header__desktop__bar__c {
      flex: 1 1 auto;
      justify-content: center;
    }

    .header__desktop__bar__r {
      flex: 0 0 auto;
      gap: 20px;
    }

    .header__logo__link {
      max-width: {{ section.settings.logo_width_desktop }}px;
    }

    /* Navigation Menu */
    .header__menu {
      display: flex;
      align-items: center;
      gap: 30px;
    }

    .navlink {
      text-decoration: none;
      color: #000;
      font-size: 15px;
      font-weight: 500;
      transition: color 0.2s;
    }

    .navlink:hover {
      color: {{ section.settings.highlight_color }};
    }

    .header__bfcm-nav-link {
      color: {{ section.settings.highlight_color }};
      font-weight: 700;
    }

    /* Desktop Buttons */
    .header__desktop__buttons {
      display: flex;
      align-items: center;
      gap: 15px;
    }
  }

  /* Sticky Header */
  {% if section.settings.sticky_header %}
  .header__wrapper[data-header-sticky] {
    position: sticky;
    top: 0;
    z-index: 100;
  }
  {% endif %}
</style>

<div
  class="header__wrapper"
  {% if section.settings.sticky_header %}data-header-sticky{% endif %}
  data-section-id="{{ section.id }}"
>
  <header class="theme__header" role="banner">
    <div class="section-padding">

      {%- comment -%} Mobile Header {%- endcomment -%}
      <div class="header__mobile">
        <div class="header__mobile__left">
          <button class="header__mobile__hamburger" aria-label="Menu">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 5h18M3 12h18M3 19h18" stroke-linecap="round"/>
            </svg>
          </button>
        </div>

        <div class="header__logo">
          <a class="header__logo__link" href="{{ routes.root_url }}">
            {% if section.settings.logo != blank %}
              {{ section.settings.logo | image_url: width: 400 | image_tag: loading: 'eager', alt: shop.name }}
            {% else %}
              <span class="header__logo__text">{{ shop.name }}</span>
            {% endif %}
          </a>
        </div>

        <div class="header__mobile__right">
          <a class="header__cart__button" href="{{ routes.cart_url }}">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m19.26 9.696 1.385 9A2 2 0 0 1 18.67 21H5.33a2 2 0 0 1-1.977-2.304l1.385-9A2 2 0 0 1 6.716 8h10.568a2 2 0 0 1 1.977 1.696zM14 5a2 2 0 1 0-4 0" stroke-linecap="round"/>
            </svg>
            <span class="header__cart__count">{{ cart.item_count }}</span>
          </a>
        </div>
      </div>

      {%- comment -%} Desktop Header {%- endcomment -%}
      <div class="header__desktop">
        <div class="header__desktop__bar__l">
          <div class="header__logo">
            <a class="header__logo__link" href="{{ routes.root_url }}">
              {% if section.settings.logo != blank %}
                {{ section.settings.logo | image_url: width: 400 | image_tag: loading: 'eager', alt: shop.name }}
              {% else %}
                <span class="header__logo__text">{{ shop.name }}</span>
              {% endif %}
            </a>
          </div>
        </div>

        <div class="header__desktop__bar__c">
          <nav class="header__menu">
            {% for link in section.settings.menu.links %}
              <a href="{{ link.url }}" class="navlink">
                {{ link.title }}
              </a>
            {% endfor %}
          </nav>
        </div>

        <div class="header__desktop__bar__r">
          <div class="header__desktop__buttons">
            <a class="header__cart__button" href="{{ routes.cart_url }}">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m19.26 9.696 1.385 9A2 2 0 0 1 18.67 21H5.33a2 2 0 0 1-1.977-2.304l1.385-9A2 2 0 0 1 6.716 8h10.568a2 2 0 0 1 1.977 1.696zM14 5a2 2 0 1 0-4 0" stroke-linecap="round"/>
              </svg>
              <span class="header__cart__count">{{ cart.item_count }}</span>
            </a>
          </div>
        </div>
      </div>

    </div>
  </header>
</div>

{% schema %}
{
  "name": "Header HiStrips",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width_desktop",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Logo Width Desktop",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Logo Width Mobile",
      "default": 120
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight Color",
      "default": "#d02e2e"
    }
  ],
  "presets": [
    {
      "name": "Header HiStrips"
    }
  ]
}
{% endschema %}
