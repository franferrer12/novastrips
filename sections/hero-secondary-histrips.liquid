<style>
  .hero-{{ section.id }} {
    --aspect-ratio-desktop: {{ section.settings.aspect_ratio_desktop }};
    --aspect-ratio-mobile: {{ section.settings.aspect_ratio_mobile }};
  }
</style>

<div
  id="hero-{{ section.id }}"
  class="index-hero wide-image hero-{{ section.id }}"
  data-section-type="hero"
  data-section-id="{{ section.id }}"
>
  <div class="hero__wrapper frame wrapper--full">
    {% if section.settings.link != blank %}
      <a class="hero__images frame__item" href="{{ section.settings.link }}">
    {% else %}
      <div class="hero__images frame__item">
    {% endif %}

      <div class="hero__split-image">
        <div class="image__hero__frame image-height">
          {% if section.settings.image_desktop != blank or section.settings.image_mobile != blank %}
            <picture>
              {% if section.settings.image_desktop != blank %}
                <source
                  media="(min-width: 750px)"
                  srcset="
                    {{ section.settings.image_desktop | image_url: width: 750 }} 750w,
                    {{ section.settings.image_desktop | image_url: width: 1000 }} 1000w,
                    {{ section.settings.image_desktop | image_url: width: 1500 }} 1500w,
                    {{ section.settings.image_desktop | image_url: width: 2000 }} 2000w,
                    {{ section.settings.image_desktop | image_url: width: 3000 }} 3000w
                  "
                  width="{{ section.settings.image_desktop.width }}"
                  height="{{ section.settings.image_desktop.height }}"
                >
              {% endif %}

              {% if section.settings.image_mobile != blank %}
                <source
                  media="(max-width: 749px)"
                  srcset="
                    {{ section.settings.image_mobile | image_url: width: 375 }} 375w,
                    {{ section.settings.image_mobile | image_url: width: 550 }} 550w,
                    {{ section.settings.image_mobile | image_url: width: 750 }} 750w,
                    {{ section.settings.image_mobile | image_url: width: 1100 }} 1100w
                  "
                  width="{{ section.settings.image_mobile.width }}"
                  height="{{ section.settings.image_mobile.height }}"
                >
              {% endif %}

              <img
                src="{{ section.settings.image_desktop | default: section.settings.image_mobile | image_url: width: 1500 }}"
                alt="{{ section.settings.image_alt | escape }}"
                loading="{% if section.settings.lazy_load %}lazy{% else %}eager{% endif %}"
                width="{{ section.settings.image_desktop.width | default: section.settings.image_mobile.width }}"
                height="{{ section.settings.image_desktop.height | default: section.settings.image_mobile.height }}"
              >
            </picture>
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
      </div>

    {% if section.settings.link != blank %}
      </a>
    {% else %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Secondary HiStrips",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Hero image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    },
    {
      "type": "range",
      "id": "aspect_ratio_desktop",
      "min": 1,
      "max": 5,
      "step": 0.1,
      "label": "Aspect Ratio Desktop",
      "default": 3.5,
      "info": "Height = Width / Aspect Ratio"
    },
    {
      "type": "range",
      "id": "aspect_ratio_mobile",
      "min": 0.5,
      "max": 3,
      "step": 0.1,
      "label": "Aspect Ratio Mobile",
      "default": 1.3,
      "info": "Height = Width / Aspect Ratio"
    },
    {
      "type": "checkbox",
      "id": "lazy_load",
      "label": "Lazy Load Image",
      "default": false,
      "info": "Disable for above-the-fold images"
    }
  ],
  "presets": [
    {
      "name": "Hero Secondary HiStrips"
    }
  ]
}
{% endschema %}

